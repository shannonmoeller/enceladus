{
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "npx eslint --fix '**/*.js' && npx stylelint --fix '**/*.css' && prettier --write '**/*.{html,css,js}' && npx -p typescript tsc"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-sparse-arrays": 0
    }
  },
  "stylelint": {
    "extends": "stylelint-config-recommended",
    "rules": {
      "no-descending-specificity": null
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 160
  }
}
